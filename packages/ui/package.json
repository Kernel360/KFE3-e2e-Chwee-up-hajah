{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./theme": "./src/theme.css",
    "./styles": "./dist/index.css",
    "./*": "./src/*.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:styles && pnpm run build:components",
    "build:styles": "tailwindcss -c ./tailwind.config.ts -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.522.0",
    "next": "^15.2.3",
    "react-icons": "^5.5.0",
    "swiper": "^11.2.8",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.3.4"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-docs": "^9.0.6",
    "@storybook/addon-onboarding": "^9.0.6",
    "@storybook/nextjs": "^9.0.6",
    "@tailwindcss/cli": "^4.1.5",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.28.0",
    "eslint-plugin-storybook": "9.0.6",
    "postcss": "^8.5.3",
    "storybook": "^9.0.6",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.2"
  }
}
